# Todo Environment Configuration
# Copy this file to .env and replace with your actual Firebase values

# Firebase Configuration for Todo App (Android Only)
EXPO_PUBLIC_FIREBASE_API_KEY=your_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_app_id

# Environment Settings
EXPO_PUBLIC_ENVIRONMENT=Todo
EXPO_PUBLIC_TARGET_PLATFORM=android

# App Configuration
EXPO_PUBLIC_APP_NAME="Todo App"
EXPO_PUBLIC_APP_VERSION=1.0.0

# Firebase Storage (Simulated Upload Mode)
EXPO_PUBLIC_STORAGE_SIMULATION_MODE=true

# Debug Settings
EXPO_PUBLIC_DEBUG_MODE=false
